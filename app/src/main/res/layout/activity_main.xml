<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1.5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:background="@drawable/grid_background"
        android:padding="8dp">

        <GridLayout
            android:id="@+id/sudoku_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:columnCount="9"
            android:rowCount="9" />
    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="0.3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/btn_notes_toggle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="笔记模式 (开)"
            android:textOff="笔记模式 (关)"
            android:background="@drawable/toggle_notes_background"  android:textColor="@color/white"
            android:layout_marginEnd="8dp"/>

        <ToggleButton
            android:id="@+id/btn_erase_toggle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="擦除"
            android:textOn="擦除模式 (开)"
            android:textOff="擦除模式 (关)"
            android:background="@drawable/toggle_erase_background"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_selector_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_num_1"
            style="@style/NumberButton"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_num_2"
            style="@style/NumberButton"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_num_3"
            style="@style/NumberButton"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_num_4"
            style="@style/NumberButton"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_num_5"
            style="@style/NumberButton"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_num_6"
            style="@style/NumberButton"
            android:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_num_7"
            style="@style/NumberButton"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_num_8"
            style="@style/NumberButton"
            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_num_9"
            style="@style/NumberButton"
            android:text="9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/difficulty_spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/cell_border"
            android:entries="@array/difficulty_levels"
            android:padding="10dp"
            android:spinnerMode="dropdown" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_new_game"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:text="New Game"
            android:background="@drawable/button_background_orange"
            android:textColor="@color/white"
            android:paddingHorizontal="24dp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_weight="1" />

</LinearLayout>